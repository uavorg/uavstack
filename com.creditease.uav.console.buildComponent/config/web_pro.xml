	<!-- jersey restful service START --> 
	<servlet>
		<servlet-name>jersey-serlvet</servlet-name>
		<servlet-class>com.creditease.uav.apphub.core.AppHubRestServlet</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.creditease.uav.apphub.rest,com.creditease.uav.godeye.rest,com.creditease.uav.manage.rest,com.creditease.uav.appmongo.rest,com.creditease.uav.grafana,com.creditease.uav.opentsdb</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>

	<servlet-mapping>
		<servlet-name>jersey-serlvet</servlet-name>
		<url-pattern>/rs/*</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>es-serlvet</servlet-name>
		<servlet-class>com.creditease.uav.es.EsRestServlet</servlet-class>
		<init-param>
			<param-name>es.info</param-name>
			<param-value>{"forwar.url":"http://127.0.0.1:9200,http://127.0.0.1:9200"}</param-value>
		</init-param>
